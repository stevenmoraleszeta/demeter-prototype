# Deméter - Environment Variables Example
# Copy this file to .env and fill in your actual values

# API Configuration
# Base URL for your backend API (if applicable)
REACT_APP_API_URL=http://localhost:5000/api

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
# Note: This is for future ChatGPT integration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
# Environment (development, production, staging)
REACT_APP_ENV=development

# Application Name
REACT_APP_NAME=Deméter

# Application Version
REACT_APP_VERSION=0.1.0

# Optional: Analytics or Tracking IDs
# REACT_APP_GA_TRACKING_ID=your_google_analytics_id
# REACT_APP_SENTRY_DSN=your_sentry_dsn

# Optional: Feature Flags
# REACT_APP_ENABLE_CHATGPT=true
# REACT_APP_ENABLE_ANALYTICS=false

